   journal = {Bioenergy Research},
   keywords = {Age effect,Climatic condition effect,Integrated genetic map,Orthologous genes,QTL mapping},
   month = {6},
   pages = {755-776},
   publisher = {Springer},
   title = {Linkage Mapping of Biomass Production and Composition Traits in a Miscanthus sinensis Population},

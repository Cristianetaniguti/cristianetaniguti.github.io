   journal = {bioRxiv},
   keywords = {Composite interval mapping,F1 population,Fullsib,Interval mapping,Outcross},
   title = {fullsibQTL: An R package for QTL mapping in biparental populations of outcrossing species},
   year = {2020},
}
@article{Nakamura2016a,
